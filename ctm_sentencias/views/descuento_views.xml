<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="descuentos_form_view" model="ir.ui.view">
            <field name="name">descuentos.form</field>
            <field name="model">descuentos</field>
            <field name="arch" type="xml">
                <form string="Descuentos">
                    <header>
                        <button name="crear_descuento" type="object" string="Crear"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="liquidacion_id"/>
                            <field name="descuento_bruto" widget="percentage"/>
                            <field name="retencion_total" widget="percentage"/>
                            <field name="estructuracion"/>
                            <field name="intermediacion" widget="percentage"/>
                        </group>
                        <group string="Resultados">
                            <group>
                                <field name="valor_condena" readonly="1"/>
                                <field name="fecha_liquidar" readonly="1"/>
                                <field name="total_intereses" readonly="1"/>
                                <field name="resultado" readonly="1"/>
                                <field name="tir_sentencia_bruta" readonly="1"/>
                            </group>
                            <group>
                                <field name="descuento_bruto_resultado" readonly="1"/>
                                <field name="retencion_total_resultado" readonly="1"/>
                                <field name="estructuracion_resultado" readonly="1"/>
                                <field name="intermediacion_resultado" readonly="1"/>
                                <field name="total_descuentos" readonly="1"/>
                                <field name="porcentaje_total_descuentos" readonly="1"/>
                                <field name="valor_compra" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="descuentos_tree_view" model="ir.ui.view">
            <field name="name">descuentos.tree</field>
            <field name="model">descuentos</field>
            <field name="arch" type="xml">
                <tree string="Descuentos">
                    <field name="name"/>
                    <field name="liquidacion_id"/>
                    <field name="descuento_bruto"/>
                    <field name="retencion_total"/>
                    <field name="estructuracion"/>
                    <field name="intermediacion"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>