<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ctm_contacts" model="ir.ui.view">
        <field name="name">action.ctm.contacts.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="vat"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_ctm_contacts">
        <field name="name">Contactos</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id"
               ref="view_ctm_contacts"/>
    </record>

    <menuitem id="res_partner_menu_contacts_ctm"
        name="Dashboard"
        action="action_ctm_contacts"
        parent="contacts.menu_contacts"
        sequence="1"/>

</odoo>