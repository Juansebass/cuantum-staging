<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bank_balance_kanban_view" model="ir.ui.view">
        <field name="name">bank.balance.kanban</field>
        <field name="model">bank.balance</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="journal_id"/>
                <field name="bank_account"/>
                <field name="value"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_ctm_contacts">
        <field name="name">Contactos</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('ctm_base.ctm_contacts_kanban_view')}),
            ]"/>
    </record>

    <menuitem id="res_partner_menu_contacts_ctm"
        name="Dashboard"
        action="action_ctm_contacts"
        parent="contacts.menu_contacts"
        sequence="1"/>

</odoo>