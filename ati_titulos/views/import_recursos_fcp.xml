<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="import_recursos_fcp_view_form">
		<field name="name">import.recursos.fcp.view.form</field>
		<field name="model">import.recursos.fcp</field>
		<field name="arch" type="xml">
			<form string="Importar Recursos FCP">
				<header>
					<button name="btn_process" type="object" string="Procesar Recursos FCP" states="draft" />
					<field name="state" widget="statusbar" />
				</header>
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="client_file" widget="binary"/>
							<field name="month" />
							<field name="year" />
						</group>
						<group>
							<field name="delimiter" />
							<field name="skip_first_line" />
							<field name="client_match" />
							<field name="responsable" readonly='1'/>
                			<field name="fch_procesado" readonly='1'/>
						</group>
						<group string="Archivo Excel" attrs="{'invisible': [('xls_output', '=', False)]}">
                            <group>
                                <field name="xls_output"/>
                            </group>
                        </group>
					</group>
					<notebook>
						<page string="Contenido" >
							<field name="file_content" readonly="1"/>
						</page>
						<page string="No procesados">
							<field name="not_processed_content" readonly="1"/>
						</page>
                        <page string="Recursos Cargados">
                                <field name="recursos_cargados" readonly="1"/>
                        </page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="import_recursos_fcl_tree">
		<field name="name">import.recursos.fcp.view.tree</field>
		<field name="model">import.recursos.fcp</field>
		<field name="arch" type="xml">
		<tree string="Import FCP">
			<field name="name" />
			<field name="state" />
			<field name="responsable" />
            <field name="fch_procesado" />
		</tree>
		</field>
	</record>

</odoo>