<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!-- extractos form view -->
    <record id="model_ati_extracto_view_form" model="ir.ui.view">
        <field name="name">ati.extracto.view.form</field>
        <field name="model">ati.extracto</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <div class="o_row">
                            <h3 style="display: flex;">
                                <field name="name" 
                                        placeholder="Nombre de extracto" 
                                        required="1"
                                        default_focus="1" class="oe_inline"/>
                            </h3>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="client" />
                            <field name="manager" />
                            <field name="issuing" />
                            <field name="payer" />
                            <field name="title" />
                            <field name="date" />
                        </group>
                        <group>
                            <field name="movement_type" />
                            <field name="value" />
                            <field name="fee" />
                            <field name="bonding_date" />
                            <field name="redemption_date" />
                            <field name="state_extracto" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- extractos tree view -->
    <record id="model_ati_extracto_view_tree" model="ir.ui.view">
        <field name="name">ati.extracto.view.tree</field>
        <field name="model">ati.extracto</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="client" />
                <field name="movement_type" />
                <field name="title" />
                <field name="state_extracto" />
            </tree>
        </field>
    </record>

</odoo>