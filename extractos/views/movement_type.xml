<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!-- movement type form view -->
    <record id="model_ati_movement_type_view_form" model="ir.ui.view">
        <field name="name">ati.movement.type.view.form</field>
        <field name="model">ati.movement.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <div class="o_row">
                            <h3 style="display: flex;">
                                <field name="name" 
                                        placeholder="Nombre de movimiento" 
                                        required="1"
                                        default_focus="1" class="oe_inline"/>
                            </h3>
                        </div>
                    </div>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- movement type tree view -->
    <record id="model_ati_movement_type_view_tree" model="ir.ui.view">
        <field name="name">ati.movement.type.view.tree</field>
        <field name="model">ati.movement.type</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
            </tree>
        </field>
    </record>

</odoo>