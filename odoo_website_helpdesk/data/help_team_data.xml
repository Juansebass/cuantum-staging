<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Project Stages -->
        <record id="team_tesoreria" model="help.team">
            <field name="name">Tesorería</field>
        </record>

        <record id="team_comercial" model="help.team">
            <field name="name">Comercial</field>
        </record>

        <record id="team_riesgos" model="help.team">
            <field name="name">Riesgos</field>
        </record>

        <record id="team_gerencia" model="help.team">
            <field name="name">Gerencia</field>
        </record>

        <!-- Grupos seguridad -->
        <!-- Categoria Inicial -->
        <record id="module_category_mesa" model="ir.module.category">
            <field name="name">Mesa</field>
            <field name="sequence">1</field>
        </record>
        <!-- Sub Categorias -->
        <record id="module_category_mesa_mesa" model="ir.module.category">
            <field name="name">Mesa</field>
            <field name="sequence">1</field>
            <field name="parent_id" ref="module_category_mesa"/>
        </record>
        <!-- Grupos -->
        <record id="group_cuantum_mesa_tesoreria" model="res.groups">
            <field name="name">Tesorería</field>
            <field name="menu_access" eval="[(4,ref('odoo_website_helpdesk.menu_helpdesk'))]"/>
            <field name="category_id" ref="module_category_mesa_mesa"/>
        </record>
        <record id="group_cuantum_mesa_comercial_factoring" model="res.groups">
            <field name="name">Comercial Factoring</field>
            <field name="menu_access" eval="[(4,ref('odoo_website_helpdesk.menu_helpdesk'))]"/>
            <field name="category_id" ref="module_category_mesa_mesa"/>
        </record>
        <record id="group_cuantum_mesa_comercial_libranzas" model="res.groups">
            <field name="name">Comercial Libranzas</field>
            <field name="menu_access" eval="[(4,ref('odoo_website_helpdesk.menu_helpdesk'))]"/>
            <field name="category_id" ref="module_category_mesa_mesa"/>
        </record>
        <record id="group_cuantum_mesa_comercial_sentencias" model="res.groups">
            <field name="name">Comercial Sentencias</field>
            <field name="menu_access" eval="[(4,ref('odoo_website_helpdesk.menu_helpdesk'))]"/>
            <field name="category_id" ref="module_category_mesa_mesa"/>
        </record>
        <record id="group_cuantum_mesa_riesgos" model="res.groups">
            <field name="name">Riesgos</field>
            <field name="menu_access" eval="[(4,ref('odoo_website_helpdesk.menu_helpdesk'))]"/>
            <field name="category_id" ref="module_category_mesa_mesa"/>
        </record>
        <record id="group_cuantum_mesa_gerencia" model="res.groups">
            <field name="name">Gerencia</field>
            <field name="menu_access" eval="[(4,ref('odoo_website_helpdesk.menu_helpdesk'))]"/>
            <field name="category_id" ref="module_category_mesa_mesa"/>
        </record>
    </data>
</odoo>
